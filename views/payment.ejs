<%- include('head-foot/header'); -%>
<form action="/payment_confirm" method="POST" id = 'form'>
    <input type="text" name="order_id" id="order_id" value="<%= order_id %>">
    <input type="text" name="name" id="name" value="<%= name %>">
    <input type="text" name="email" id="email" value="<%= email %>">
    <input type="text" name="phone" id="phone" value="<%= phone %>">
    <input type="text" name="payment_signature" id="payment_signature" value="">
    <input type="text" name="amount" id="amount" value="<%= amount %>">
    
    <input type="text" name="country" id="" value="<%= country %>" placeholder="country">
    <input type="text" name="state" id="" value="<%= state %>" placeholder="state">
    <input type="text" name="pincode" id="" value="<%= pincode %>" placeholder="pincode">
