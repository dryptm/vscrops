</head>

<body>
    <div role="banner" data-ux="PromoBanner" data-aid="BANNER_RENDERED" categoryoverride="accent" class="banner">
        <p data-ux="PromoBannerText" data-aid="BANNER_TEXT_RENDERED" data-typography="HeadingBeta" class="banner-p">
            THE PURE LIFE</p>
    </div>
    <div class="header-block">
        <div class="header-block-container">
            <ul class="ul-continer">
                <div class="li-div">
                    <li><a id="home" class="li-container" href="/home">HOME</a></li>
                    <li><a id="products" class="li-container" href="/products">PRODUCTS</a></li>
                    <li><a id="ourstory" class="li-container" href="/ourstory">OUR STORY</a></li>
                    <li><a id="foundersnote" class="li-container" href="/foundersnote">FOUNDER'S NOTE</a></li>
                    <li><a id="blog" class="li-container" href="/blog">BLOG</a></li>
                    <li><a id="contactus" class="li-container" href="/contactus">CONTACT US</a></li>
                </div>
            </ul>
            <div class="search-cart-user">
                <a href="" class="vs-header-icons"><i class="fas fa-search "></i></a>
                <a href="/cart" class="vs-header-icons"><i class="fas fa-shopping-cart "></i></a>
                <a style="cursor: pointer;" onmouseout="dropdownout_2()" onmouseover="dropdownover_2()" onclick="dropdownclick_1()" class="vs-header-icons"><i class="fas fa-user "></i></a>
            </div>
        </div>
        <div class="head_divider"></div>

    </div>
    <div id="user_dropdown_1" onmouseout="dropdownout_2()" onmouseover="dropdownover_2()" class="user_dropdown" style="visibility: collapse;">
        <% if(isLoggedin==="yes") {%>
            <div class="user_d_box">
                <p class="user_d_box_content"><%= name %> </p>
            </div>
            <div class="user_d_box">
                <p class="user_d_box_content"><a href="/orders" onclick="dropdownclick()"
                        style="color: inherit;text-decoration: none;">Orders</a></p>
            </div>
            <div class="user_d_box">
                <p class="user_d_box_content"><a href="/logout" onclick="dropdownclick()"
                        style="color: inherit;text-decoration: none;">Logout</a></p>
            </div>
    
        <% } %>  
        <% if(isLoggedin==="no") {%>
        <div class="user_d_box">
            <p class="user_d_box_content"><a href="/login" onclick="dropdownclick()"
                    style="color: inherit;text-decoration: none;">Login</a></p>
        </div>
        <div class="user_d_box">
            <p class="user_d_box_content"><a href="/register" onclick="dropdownclick()"
                    style="color: inherit;text-decoration: none;">SignUp</a></p>
        </div>

        <% } %>  
    </div>

    <div class="chat_button">
        <a style="text-decoration: none;" href="https://wa.me/916386417658" target="_blank"><i class="fab fa-whatsapp" style="color: #ffffff;"></i></a>
    </div>
    
    


    <script>
        function dropdownclick() {
            document.getElementById("user_dropdown_1").style.visibility = "collapse";
        }
        var userclick = 0;
        function dropdownover_2(){
            document.getElementById("user_dropdown_1").style.opacity = 1;
            document.getElementById("user_dropdown_1").style.visibility = "visible";
        }
        function dropdownout_2(){
            document.getElementById("user_dropdown_1").style.opacity = 0;
            document.getElementById("user_dropdown_1").style.visibility = "collapse";
        }
        function dropdownclick_1() {
            if (userclick == 0) {
                document.getElementById("user_dropdown_1").style.opacity = 1;
                document.getElementById("user_dropdown_1").style.visibility = "visible";
                userclick++;
            } else {
                document.getElementById("user_dropdown_1").style.opacity = 0;
                document.getElementById("user_dropdown_1").style.visibility = "collapse";
                userclick--;
            }
        }


        document.body.addEventListener("click", function (evt) {
            console.dir(this);
            console.log(evt.target.tagName)
            if(evt.target.tagName!="I"){
                document.getElementById("user_dropdown_1").style.opacity = 0;
                document.getElementById("user_dropdown_1").style.visibility = "collapse";
                userclick=0;
            }
        });
    </script>
