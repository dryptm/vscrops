                                <input type="text" name="" id="order_id<%=i%>" value="null" style="display:none;">

                                <% } %>
                                <% } %>


                                <input type="number" style="visibility: collapse; position: absolute;position: absolute;" id="len2<%=i%>"
                                    value="<%= orders[i].items.length %>">


                            </div>
                            <%}%>
                </div>
            </div>
        

        




