                                <input type="text" name="" id="order_id<%=i%>" value="null" style="display:none;">
                                <% } %>
                                <% if(obj.shiprocket_order_info[0]!=='<'){ %>
                                <input type="text" name="" id="order_id<%=i%>"
                                    value="<%= JSON.parse(obj.shiprocket_order_info).order_id %>" style="display:none;">

